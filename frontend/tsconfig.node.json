{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": false,  // Schimbat din 'true' pentru referințe
    "composite": true,  // Adăugat pentru referințe
    "strict": true,
    "noUnusedLocals": true,
    "noUncheckedSideEffectImports": true,
    "emitDeclarationOnly": true  // Adăugat
  },
  "include": ["vite.config.ts"]
}